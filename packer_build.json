{
    "variables": {
        "env":  "{{env `ENV`}}"
    },
    "builders": [
        {
            "type":                 "amazon-ebs",
            "region":               "{{user `region`}}",
            "instance_type":        "{{user `instance_type`}}",
            "ssh_username":         "{{user `ssh_username`}}",
            "ami_name":             "{{user `ami_name`}}-{{isotime | clean_resource_name}}",
            "source_ami_filter": {
                "filters": {
                 "virtualization-type": "hvm",
                 "name":                "Monolith-Golden-AMI",
                 "root-device-type":    "ebs"
                },
                "owners":      ["614680000114"],
                "most_recent": true
            }
        }
    ],
    "provisioners": [
        {
            "type":   "shell",
            "script": "admin_script.sh",
            "environment_vars": [
                "ENV={{ user `env` }}"
            ]
        }
    ],
    "post-processors": [
        {
            "type":   "manifest",
            "output": "output.json"
        }
    ]
}
